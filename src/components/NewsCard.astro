---
interface Props {
	title: string;
	summary: string;
	date: Date;
	slug: string;
	coverImage?: string;
}

const { title, summary, date, slug, coverImage } = Astro.props as Props;
const base = import.meta.env.BASE_URL;
const formattedDate = new Intl.DateTimeFormat('en-GB', {
	dateStyle: 'medium',
}).format(date);
---
<article class="card news-card">
	{coverImage && <img src={coverImage} alt={title} loading="lazy" />}
	<p class="eyebrow">{formattedDate}</p>
	<h3>
		<a href={`${base}news/${slug}/`}>{title}</a>
	</h3>
	<p>{summary}</p>
	<a class="button button--outline" href={`${base}news/${slug}/`}>
		Read post â†’
	</a>
</article>
