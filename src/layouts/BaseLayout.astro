---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'KOC Cricket | Koç University Cricket Club',
	description = 'Official home for KOC Cricket news, fixtures, and media.',
} = Astro.props as Props;
const base = import.meta.env.BASE_URL;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<a class="skip-link" href="#main">Skip to content</a>
		<header class="site-header">
			<div class="container header-inner">
				<a class="logo" href={base}>KOC Cricket</a>
				<nav aria-label="Primary">
					<ul>
						<li><a href={`${base}news/`}>News</a></li>
						<li><a href={`${base}schedule/`}>Schedule</a></li>
						<li><a href={`${base}gallery/`}>Gallery</a></li>
						<li><a href={`${base}about/`}>About</a></li>
					</ul>
				</nav>
				<a class="button button--outline" href="https://instagram.com/koccricket" target="_blank" rel="noreferrer">Follow</a>
			</div>
		</header>
		<main id="main" class="container">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container footer-inner">
				<div>
					<p class="eyebrow">KOÇ UNIVERSITY CRICKET</p>
					<p>Student-run cricket club in Istanbul. Weekly news, fixtures, and highlights.</p>
				</div>
				<div>
					<p class="eyebrow">Stay connected</p>
					<ul>
						<li><a href="https://instagram.com/koccricket" target="_blank" rel="noreferrer">Instagram</a></li>
						<li><a href="https://www.linkedin.com/company/koccricket" target="_blank" rel="noreferrer">LinkedIn</a></li>
						<li><a href="mailto:koccricket@ku.edu.tr">koccricket@ku.edu.tr</a></li>
					</ul>
				</div>
				<div>
					<p class="eyebrow">Join the squad</p>
					<p>Open training every Wednesday & Saturday. DM us or hop into the WhatsApp group.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
